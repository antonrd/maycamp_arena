<h1>Регистрация</h1>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for @user do |f| -%>
<p>
    <%= f.label :login, 'Потребителско име:' %>
    <%= f.text_field :login %>
    <em>С това име ще влизате в системата</em>
</p>
<p>
    <%= f.label :name, 'Истинско име:' %>
    <%= f.text_field :name %>
    <em>Това име ще се появява в класиранията на състезанията</em>
</p>
<p>
    <%= f.label :email, "Email:" %>
    <%= f.text_field :email %>
</p>
<p>
    <%= f.label :password, "Парола:" %>
    <%= f.password_field :password %>
</p>
<p>
    <%= f.label :password_confirmation, 'Потвърди паролата:' %>
    <%= f.password_field :password_confirmation %>
</p>
<p>
  <%= submit_tag 'Създай нов потребител' %>
</p>
<% end -%>
