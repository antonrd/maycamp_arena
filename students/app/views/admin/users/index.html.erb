<h1>Потребители</h1>
<br />
<% if !@users.blank? %>
  <table>
    <tr>
      <th>Login</th>
      <th>Email</th>
      <th>Администратор?</th>
      <th>Действия</th>
    </tr>
  <% for user in @users %>
    <tr>
      <td><%= user.login %></td>
      <td><%= user.email %></td>
      <td><%= check_box_tag user.login, "1", user.admin?, :disabled => true %></td>
      <td>
        <%= link_to "Промяна", edit_admin_user_path(user.id) %> |
        <%= link_to "Изтриване", :action => 'destroy', :id => user.id %>
      </td>
    </tr>
  <% end %>
  </table>
<% end %>
<br />
<p>
  <%= link_to "Нов потребител", :action => "new" %> |
  <%= link_to "Начална страница", root_path %>
</p>